<% @projects.each do |project| %>
   <div class="link row clearfix">
     <h2>
       <%= link_to project.title, project %><br>
       <small class="author">Submitted <%= time_ago_in_words(project.created_at) %> by <%= project.user.email %></small>
     </h2>
     
     
     <div class="btn-group">
      <a class="btn btn-default btn-sm" href="<%= project.url %>">Visit Project</a>
      <%= link_to like_project_path(project), method: :put, class: "btn btn-default btn-sm" do %>
        <span class="glyphicon glyphicon-chevron-up"></span>
        Upvote
        <%= project.get_upvotes.size %>
      <% end %>
      <%= link_to dislike_project_path(project), method: :put, class: "btn btn-default btn-sm" do %>
        <span class="glyphicon glyphicon-chevron-down">
        Downvote
        <%= project.get_downvotes.size %>
      <% end %>
    </div>
   </div>
<% end %>






